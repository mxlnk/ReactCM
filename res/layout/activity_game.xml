<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/buttonUpperLeft"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/arrow_upper_left" />

        <ImageButton
            android:id="@+id/buttonUpperRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/arrow_upper_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/buttonLowerLeft"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/arrow_lower_left" />

        <ImageButton
            android:id="@+id/buttonLowerRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/arrow_lower_right" />

    </LinearLayout>

</LinearLayout>